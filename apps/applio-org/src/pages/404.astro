---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div
    class="flex flex-col items-center w-full min-h-screen justify-center p-12 pt-6 relative"
  >
    {/* background glow effect */}
    <div class="fixed inset-0 flex justify-center items-center">
      <div
        class="bg-white/5 h-[50vh] w-[50vh] rounded-full blur-3xl animate-spin"
      >
      </div>
    </div>

    <div class="text-center z-10">
      <h1 class="text-[150px] font-bold text-white/20 select-none">404</h1>
      <h2 class="text-4xl font-bold text-neutral-200 mt-4 animate-fade-in">
        Page not found
      </h2>
      <p class="text-neutral-400 mt-4 mb-8 max-w-md">
        The page you're looking for doesn't exist or has been moved to another
        location.
      </p>

      <div class="flex w-full mb-4 justify-center">
        <a
          href="/"
          class="group inline-flex px-4 py-2 bg-neutral-800/80 hover:bg-neutral-700 text-neutral-300 rounded-xl transition-all items-center gap-2 mb-8 text-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="group-hover:-translate-x-1 transition-transform"
            ><path d="M19 12H5M12 19l-7-7 7-7"></path></svg
          >
          Back to home
        </a>
      </div>
    </div>
  </div>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out;
    }
  </style>
</Layout>
